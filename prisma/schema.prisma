generator client {
  provider = "prisma-client-js"
  output = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  nome      String?
  tipo      tipoUsuario @default(USER)
  criadoEm  DateTime @default(now())

  login    Login?
  tarefasCriadas  Tarefa[]
  tarefasResponsaveis Tarefa[] @relation("TarefaResponsaveis")

  @@map("usuarios")
}

model Login {
  usuarioId Int      @id @unique
  senha     String
  criadoEm  DateTime @default(now())

  usuario   Usuario  @relation(fields: [usuarioId], references: [id])

  @@map("logins")
}

model Tarefa {
  id          Int      @id @default(autoincrement())
  titulo      String
  descricao   String?
  status      statusTarefa   @default(PENDENTE)
  prioridade  prioridadeTarefa   @default(MEDIA)
  prazo       DateTime?
  criadoPorId Int
  criadoPor   Usuario @relation(fields: [criadoPorId], references: [id])
  responsaveis   Usuario[] @relation("TarefaResponsaveis")
  criadoEm    DateTime @default(now())

  @@map("tarefas")
}

enum tipoUsuario {
  ADMIN
  USER
}

enum statusTarefa {
  PENDENTE
  EM_ANDAMENTO
  CONCLUIDA
  ATRASADA
}

enum prioridadeTarefa {
  BAIXA
  MEDIA
  ALTA
}